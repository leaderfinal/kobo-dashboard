# Dockerfile for Screenshot Service  
FROM node:18-slim

WORKDIR /app

# Install chromium for puppeteer
RUN apt-get update && apt-get install -y \
    chromium \
    fonts-liberation \
    fonts-noto-color-emoji \
    && rm -rf /var/lib/apt/lists/*

# Set Puppeteer to use system chromium
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Copy package files
COPY package.json .

# Install dependencies (without puppeteer downloading chromium)
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
RUN npm install

# Copy application files
COPY screenshot_service.js .
COPY index.html .
COPY Montserrat-Variable.ttf .
COPY *.css ./
COPY *.js ./
COPY .env .

# Create volume mount point for shared data
VOLUME ["/app/data"]

# Set environment variables
ENV CALENDAR_JSON_PATH=/app/data/calendar.json
ENV PORT=3333

# Expose port
EXPOSE 3333

# Run the screenshot service
CMD ["node", "screenshot_service.js"]
